{
  "swagger": "2.0",
  "info": {
    "title": "身份验证 API",
    "description": "用于建立登录注册，以及 token 管理",
    "version": "1.0"
  },
  "produces": ["application/json"],
  "consumes": ["application/json"],
  "basePath": "/",
  "security": [{"cmApiKey": []}],
  "paths": {

    "/token/revoke": {
      "post": {
        "operationId": "access-token_revoke",
        "description": "吊销用户 AccessToken。AccessToken 是用户登录后获得的 token。一旦一个用户的 AccessToken 被吊销，之前发行的全部 AccessToken 都会被吊销。可以在用户登出时调用。",
        "tags": ["token"],
        "parameters": [
          {"$ref": "#/parameters/token"}
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Success"
          }
        }
      }
    },

    "/token/validate": {
      "post": {
        "operationId": "access-token_validate",
        "description": "检查 AccessToken 是否可用。包含有效性验证和吊销验证。",
        "tags": ["token"],
        "parameters": [
          {"$ref": "#/parameters/token"}
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Success"
          }
        }
      }
    },

    "/token/refresh": {
      "post": {
        "operationId": "access-token_refresh",
        "description": "刷新 AccessToken 的有效期，将时间延长到 refresh 接口被调用的七天后。调用后应该把新的 token 存储到应用中。",
        "tags": ["token"],
        "parameters": [
          {"$ref": "#/parameters/token"},
          {"$ref": "#/parameters/type"}
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Success"
          }
        }
      }
    },

    "/auth/loginAndRevoke": {
      "post": {
        "operationId": "user_loginAndRevoke",
        "tags": ["auth"],
        "description": "用户登录。这个方法会让登录用户的其他 token 失效。登录后会返回 AccessToken。",
        "parameters": [
          {
            "name": "credentials",
            "description": "登录凭证",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Success"
          }
        }
      }
    },

    "/auth/login": {
      "post": {
        "operationId": "user_login",
        "tags": ["auth"],
        "description": "用户登录。登录后会返回 AccessToken。",
        "parameters": [
          {
            "name": "credentials",
            "description": "登录凭证",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Success"
          }
        }
      }
    },

    "/auth/signup": {
      "post": {
        "operationId": "user_signup",
        "tags": ["auth"],
        "parameters": [
          {
            "name": "credentials",
            "description": "登录凭证",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Signup"
            }
          }
        ],
        "responses": {
          "200": {"$ref": "#/responses/Success"}
        }
      }
    },

    "/api/users": {

      "get": {
        "operationId": "user_findAll",
        "tags": ["user"],
        "parameters": [
          {"$ref": "#/parameters/perPage"},
          {"$ref": "#/parameters/page"},
          {"$ref": "#/parameters/sortField"},
          {"$ref": "#/parameters/sortDir"},
          {"$ref": "#/parameters/filters"}
        ],
        "responses": {
          "200": {"$ref": "#/responses/Success"}
        }
      },

      "post": {
        "operationId": "user_create",
        "tags": ["user"],
        "parameters": [
          {"$ref": "#/parameters/userData"}
        ],
        "responses": {
          "200": {"$ref": "#/responses/Success"},
          "default": {"$ref": "#/responses/Error"}
        }
      }

    },

    "/api/users/{id}": {

      "get": {
        "operationId": "user_findById",
        "tags": ["user"],
        "parameters": [
          {"$ref": "#/parameters/id"}
        ],
        "responses": {
          "200": {"$ref": "#/responses/Success"}
        }
      },

      "put": {
        "operationId": "user_update",
        "tags": ["user"],
        "parameters": [
          {"$ref": "#/parameters/id"},
          {"$ref": "#/parameters/userData"}
        ],
        "responses": {
          "200": {"$ref": "#/responses/Success"}
        }
      },

      "delete": {
        "operationId": "user_destroy",
        "tags": ["user"],
        "parameters": [
          {"$ref": "#/parameters/id"}
        ],
        "responses": {
          "200": {"$ref": "#/responses/Success"}
        }
      }

    }
  },

  "definitions": {

    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "disabled": {
          "type": "boolean"
        },
        "revokedAt": {
          "type": "number"
        }
      }
    },

    "Login": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },

    "Signup": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },

    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        },
        "detail": {
          "type": "object"
        }
      }
    }
  },

  "parameters": {

    "id": {
      "name": "id",
      "description": "实体 ID",
      "in": "path",
      "required": true,
      "type": "string"
    },

    "perPage": {
      "description": "每页条数",
      "name": "_perPage",
      "in": "query",
      "type": "integer"
    },

    "page": {
      "description": "分页页数",
      "name": "_page",
      "in": "query",
      "type": "integer"
    },

    "filters": {
      "description": "筛选条件",
      "name": "_filters",
      "in": "query",
      "type": "string"
    },

    "sortField": {
      "description": "排序字段",
      "name": "_sortField",
      "type": "string",
      "in": "query"
    },

    "sortDir": {
      "description": "排序方向",
      "name": "_sortDir",
      "type": "string",
      "in": "query",
      "enum": [
        "ASC",
        "DESC"
      ]
    },

    "userData": {
      "name": "data",
      "in": "body",
      "description": "用户实体数据",
      "schema": {
        "$ref": "#/definitions/User"
      }
    },

    "token": {
      "name": "token",
      "in": "query",
      "description": "用户 Token",
      "required": true,
      "type": "string"
  },

  "type": {
    "name": "type",
    "in": "query",
    "description": "登录类型",
    "required": true,
    "type": "string"
  }

  },

  "responses": {
    "Success": {
      "description": "成功"
    },
    "Error": {
      "description": "失败"
    }
  },

  "securityDefinitions": {
    "cmApiKey": {
      "type": "apiKey",
      "name": "cm-api-key",
      "in": "header"
    }
  }
}
